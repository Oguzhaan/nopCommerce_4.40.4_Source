@model Nop.Plugin.Payments.Teqpay.Models.ConfigurationModel
@inject Nop.Core.IWebHelper webHelper
@{
    Layout = "_ConfigurePlugin";
}

@await Component.InvokeAsync("StoreScopeConfiguration")

<form asp-controller="PaymentTeqpay" asp-action="Configure" method="post">
    <div class="cards-group">
        <div class="card card-default">
            <div class="card-body">
                @Html.Raw(T("Plugins.Payments.Teqpay.Instructions", $"{webHelper.GetStoreLocation()}Plugins/PaymentTeqpay/PDTHandler"))
                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="UseSandbox_OverrideForStore" asp-input="UseSandbox" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                        <nop-label asp-for="UseSandbox" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="UseSandbox" />
                        <span asp-validation-for="UseSandbox"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="TestApiKey_OverrideForStore" asp-input="TestApiKey" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                        <nop-label asp-for="TestApiKey" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="TestApiKey" />
                        <span asp-validation-for="TestApiKey"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="TestApiSecretKey_OverrideForStore" asp-input="TestApiSecretKey" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                        <nop-label asp-for="TestApiSecretKey" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="TestApiSecretKey" />
                        <span asp-validation-for="TestApiSecretKey"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="TestApiUrl_OverrideForStore" asp-input="TestApiUrl" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                        <nop-label asp-for="TestApiUrl" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="TestApiUrl" />
                        <span asp-validation-for="TestApiUrl"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="LiveApiKey_OverrideForStore" asp-input="LiveApiKey" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                        <nop-label asp-for="LiveApiKey" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="LiveApiKey" />
                        <span asp-validation-for="LiveApiKey"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="LiveApiSecretKey_OverrideForStore" asp-input="LiveApiSecretKey" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                        <nop-label asp-for="LiveApiSecretKey" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="LiveApiSecretKey" />
                        <span asp-validation-for="LiveApiSecretKey"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="LiveApiUrl_OverrideForStore" asp-input="LiveApiUrl" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                        <nop-label asp-for="LiveApiUrl" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="LiveApiUrl" />
                        <span asp-validation-for="LiveApiUrl"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-9 offset-md-3">
                        <button type="submit" name="save" class="btn btn-primary">@T("Admin.Common.Save")</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>